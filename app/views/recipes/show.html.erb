<h2><%=@recipe.name%></h2>
<p>Prepration Time: <%=@recipe.prepration_time%></p>
<p>Cooking Time: <%=@recipe.cooking_time %></p>
<p>Steps go here...</p>

<%= form_for @recipe do |f| %>
  <%= f.hidden_field :public, value: @recipe.public == false %>
  Public: 
  <%= f.submit @recipe.public.to_s %>
<% end %>

<%= button_to  "Generate Shopping List", foods_path %>

<%= link_to  "Add ingredient", new_recipe_ingredient_path(@recipe) %>


<table>
  <tr>
    <th>Food</th>
    <th>Quantity</th>
    <th>Value</th>
    <th>Actions</th>
  </tr>
<% @ingredients.each do |ingredient| %>
  <tr>
    <td><%= ingredient.food.name %></td>
    <td><%= ingredient.quantity %> <%= ingredient.food.measurment_unit %></td>
    <td>$ <%= (ingredient.food.price * ingredient.quantity)  %></td>

    <td> 
    <%= link_to  "Modify", edit_recipe_ingredient_path(@recipe,ingredient)%>

    <%= button_to  "Remove", recipe_ingredient_path(@recipe,ingredient), method: :delete %>
    </td>
  </tr>
<% end %>

</table>