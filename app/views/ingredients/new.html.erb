<h1>Ingredients#new</h1>
<p>Find me in app/views/ingredients/new.html.erb</p>
<table>
  <tr>
    <th>Food</th>
    <th>Measurement Unit</th>
    <th>Unit Price</th>
    <th>Actions</th>
  </tr>
  <% @foods.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.measurment_unit %></td>
      <td>$ <%= food.price %></td>

      <td>
        <%= form_with model: @ingredient, url: recipe_ingredients_path(@recipe)  do |f| %>
          <%= f.hidden_field :recipe_id, value: @recipe.id %>
          <%= f.hidden_field :food_id, value: food.id %>


    <%= f.number_field :quantity, value: 0 %>



          <%= f.submit "Add" %>
        <% end %>
      </td>

    </tr>
  <% end %>
</table>
